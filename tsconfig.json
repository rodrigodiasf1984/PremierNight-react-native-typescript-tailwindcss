{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "lib": [
      "es6"
    ],
    "rootDir": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
  ], 
  "include": [
    "**/*.d.ts"
  ]
}